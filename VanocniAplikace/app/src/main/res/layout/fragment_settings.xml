<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".SettingsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚙️ Nastavení limitu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celkový rozpočet (Kč):"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etBudgetInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Např. 5000"
        android:inputType="number"
        android:minHeight="48dp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnSaveBudget"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Uložit nový limit"
        android:layout_marginBottom="50dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/btnResetAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ Resetovat všechna data"
        android:backgroundTint="#B00020"
        android:textColor="@color/white"/>

</LinearLayout>